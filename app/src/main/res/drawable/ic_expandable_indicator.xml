<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_empty="true" >
        <layer-list>
            <item
                android:left="10dp"
                android:right="3dp"
                android:top="20dp"
                android:bottom="10dp"
                android:drawable="@drawable/caret_down_white" />
        </layer-list>
    </item>

    <item
        android:state_expanded="false" >
        <layer-list>
            <item
                android:left="10dp"
                android:right="3dp"
                android:top="20dp"
                android:bottom="10dp"
                android:drawable="@drawable/caret_up_white" />
        </layer-list>
    </item>
</selector>