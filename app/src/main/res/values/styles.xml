<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_gradient</item>
        <item name="android:height">80dp</item>
        <!-- Support library compatibility-->
        <item name="background">@drawable/action_bar_gradient</item>
        <item name="height">80dp</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/colorVeryLightGrey</item>
    </style>

    <style name="BlueButton">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/ic_blue_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="BlueButtonCaretRight_w320dp">
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/ic_blue_button_caret_right</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RegionSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/ic_grey_spinner</item>
    </style>

    <style name="RegionSpinnerItem">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>



</resources>
