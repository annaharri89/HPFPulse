<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_gradient</item>
        <!-- Support library compatibility-->
        <item name="background">@drawable/action_bar_gradient</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/colorVeryLightGrey</item>
    </style>

    <style name="TxtCrisis">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">@dimen/txt_crisis_margin_top</item>
        <item name="android:textSize">@dimen/txt_crisis_text_size</item>
    </style>

    <style name="TxtAppSummary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">@dimen/txt_app_summary_text_size</item>
        <item name="android:layout_marginTop">@dimen/txt_app_summary_margin_top</item>
    </style>

    <style name="TxtContactToAdd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">@dimen/txt_contact_to_add_text_size</item>
    </style>

    <style name="BlueButton">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/btn_blue_height</item>
        <item name="android:background">@drawable/ic_blue_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/btn_blue_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/btn_blue_margin_end</item>
        <item name="android:layout_marginTop">@dimen/btn_blue_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/btn_blue_margin_bottom</item>
        <item name="android:textSize">@dimen/btn_blue_text_size</item>
    </style>

    <style name="BlueButtonCaretRight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/btn_blue_caret_height</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">20dp</item>
        <!-- Background is being set in MainActivity and MapActivity in order to support vector drawables in API 20 and below
        <item name="android:background">@drawable/ic_blue_button_caret_right</item>
        -->
        <item name="android:textColor">@color/blue_button_caret_right_text_color</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/btn_blue_caret_text_size</item>
    </style>

    <style name="Map">
        <item name="android:layout_marginStart">@dimen/map_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/map_margin_end</item>
        <item name="android:layout_width">@dimen/map_width</item>
        <item name="android:layout_height">@dimen/map_height</item>
    </style>

    <style name="RegionSpinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/region_spinner_height</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <!-- Background is being set in MapActivity in order to support vector drawables in API 20 and below
        <item name="android:background">@drawable/ic_grey_spinner</item>
        -->
        <item name="android:layout_marginTop">@dimen/region_spinner_margin_top</item>
    </style>

    <style name="RegionSpinnerItem">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/region_spinner_item_text_size</item>
    </style>

    <style name="TxtRegionDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">@dimen/txt_region_description_text_size</item>
        <item name="android:layout_marginTop">@dimen/txt_region_description_margin_top</item>
    </style>

    <style name="BlueHeader">
        <item name="android:paddingStart">35dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/blue_header_height</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/ic_blue_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/blue_header_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TxtOrgName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/txt_org_name_margin_start</item>
        <item name="android:layout_marginTop">@dimen/txt_org_name_margin_top</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/txt_org_name_text_size</item>
    </style>

    <style name="TxtOrgSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/txt_org_subtitle_margin_start</item>
        <item name="android:layout_marginTop">@dimen/txt_org_subtitle_margin_top</item>
        <item name="android:textSize">@dimen/txt_org_subtitle_text_size</item>
    </style>

    <style name="BtnOrg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/btn_org_height</item>
        <item name="android:layout_marginTop">@dimen/btn_org_margin_top</item>
        <item name="android:textSize">@dimen/btn_org_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BtnOrgWeb" parent="@style/BtnOrg">
        <item name="android:background">@drawable/ic_resource_button_left</item>
    </style>

    <style name="BtnOrgCall" parent="@style/BtnOrg">
        <item name="android:background">@drawable/ic_resource_button_right</item>
    </style>

    <style name="BtnOrgDivider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">@dimen/btn_org_divider_height</item>
        <item name="android:layout_marginTop">@dimen/btn_org_divider_margin_top</item>
        <item name="android:background">#bababa</item>
    </style>

    <style name="TxtEmptyList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

</resources>
